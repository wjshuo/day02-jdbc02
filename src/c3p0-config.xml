<?xml version="1.0" encoding="UTF-8"?>
<c3p0-config>
	<default-config>
		<!--mysql数据库连接的各项参数  .配置连接池-->

		<property name="jdbcUrl">jdbc:mysql://localhost:3306/lanou</property>

		<property name="driverClass">com.mysql.jdbc.Driver</property>
		<!--用户名。Default: null-->
		<property name="user">root</property>
		<!--密码。Default: null-->
		<property name="password">1</property>
		<!--配置数据库连接池的最小链接数、最大连接数、初始连接数-->
		<!--当连接池中的连接耗尽的时候c3p0一次同时获取的连接数。Default: 3 -->
		<property name="acquireIncrement">3</property>
		<!--初始化时获取三个连接，取值应在minPoolSize与maxPoolSize之间。Default: 15 -->
		<property name="initialPoolSize">15</property>
		<!--连接池中保留的最小连接数。Default: 15 -->
		<property name="minPoolSize">2</property>
		<!--连接池中保留的最大连接数。Default: 15 -->
		<property name="maxPoolSize">8</property>
	</default-config>
</c3p0-config>
